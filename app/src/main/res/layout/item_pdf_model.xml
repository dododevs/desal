<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:baselineAligned="false">

    <androidx.cardview.widget.CardView
        android:layout_width="96dp"
        android:layout_height="144dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:focusable="false"
        android:clickable="false"
        android:padding="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2.8dp"
        app:cardBackgroundColor="@android:color/white">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_pdf_model_preview"
            android:focusable="false"
            android:clickable="false"
            android:scrollbars="none"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/item_pdf_model_preview_wheel"
            style="@style/Widget.AppCompat.ProgressBar"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_pdf_model_title"
            android:textColor="@android:color/black"
            android:textSize="14.8sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_pdf_model_subtitle"
            android:textColor="@color/midGray"
            android:textSize="12.8sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>