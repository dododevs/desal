<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_white_rounded_background"
    android:padding="16dp"
    android:animateLayoutChanges="true">

    <revolver.desal.view.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_user_detail_title"
        android:textColor="@color/darkGray"
        android:textAllCaps="true"
        app:textStyle="semiBold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:id="@+id/fragment_user_detail_username"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:id="@+id/fragment_user_detail_type"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="14.8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/fragment_user_detail_logout"
            android:text="@string/fragment_user_detail_logout"
            android:textColor="@color/colorAccentDark"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/fragment_user_detail_close"
            android:text="@string/fragment_user_detail_close"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/fragment_user_detail_logout_container">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/fragment_user_detail_logout_cancel"
                android:text="@string/fragment_user_detail_logout_cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/fragment_user_detail_logout_confirm"
                android:text="@string/fragment_user_detail_logout_confirm"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textAllCaps="true"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>