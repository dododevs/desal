<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="4dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:id="@+id/item_shifts_archive_icon"
        android:src="@drawable/ic_restore"
        android:contentDescription="@string/cd_item_shifts_archive"
        app:tint="@color/darkGray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/item_shifts_archive_title"
            android:textColor="@android:color/black"
            android:textSize="16.8sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:gravity="center_vertical"
            android:id="@+id/item_shifts_archive_hours"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="13.8sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:gravity="center_vertical"
            android:id="@+id/item_shifts_archive_details"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="13.2sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/item_shifts_archive_revision_icon"
            android:src="@drawable/ic_revision"
            android:contentDescription="@string/cd_item_shifts_archive"
            app:tint="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/item_shifts_archive_revision_state"
            android:text="@string/item_shifts_archive_not_revised"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>